@model IEnumerable<myApp.Models.TransactionModel>

@{
    ViewBag.Title = "TransactionList";
}

@if (Request.IsAuthenticated)
{

    <h3><b style="color:brown">Transaction List</b></h3>

    <div>
        <input type="button" value="Transaction" onclick="@("window.location.href='" + @Url.Action("Index", "Transaction") + "'");" />
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account.accountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.fullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.transactionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.accountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.fullName)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.transactionType)
                </td>
                <td>
                    @if (item.transactionType == "D")
                    {
                        <font color="green">@item.amount</font>
                    }
                    else
                    {
                        <font color="red">@item.amount</font>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>

            </tr>
        }

    </table>



    <br />
    @Html.ActionLink("Home", "FirstPage", "Bank")



}

<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .error {
        color: red;
    }
    .sucess{
        color:green;
    }
</style>